<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Fragment>
    <UI>
      <Dialog Id="GitShellOptionsDlg" Width="370" Height="270" Title="[ProductName] [Setup]" X="50" Y="50">
        <Control Type="Text" Id="ContextMenuText" Width="330" Height="15" X="20" Y="53" NoPrefix="yes" TabSkip="no" Text="Windows Explorer Context Menu Entries:" />
        <Control Type="CheckBox" Id="GitBashHereCheckbox" Width="300" Height="17" X="34" Y="70" CheckBoxValue="1" Property="GITBASHHERE" Text="Add 'Git &amp;Bash Here' Windows Explorer context menu entry" Integer="yes" />
        <Control Type="CheckBox" Id="GitGUIHereCheckbox" Width="300" Height="17" X="34" Y="87" CheckBoxValue="1" Property="GITGUIHERE" Text="Add 'Git &amp;GUI Here' Windows Explorer context menu entry" Integer="yes" />
        <Control Type="Text" Id="FileAssociationText" Width="300" Height="15" X="20" Y="115" NoPrefix="yes" TabSkip="no" Text="Windows Explorer File Associations:" />
        <Control Type="CheckBox" Id="AssociateGitFilesCheckbox" Width="300" Height="17" X="34" Y="130" CheckBoxValue="1" Integer="yes" Property="ASSOCIATEGITFILES" Text="&amp;Associate .git* configuration files with the default text editor" />
        <Control Type="Text" Id="DesktopIconsText" Width="330" Height="15" X="20" Y="161" NoPrefix="yes" TabSkip="no" Text="Desktop Icon Options:" />
        <Control Type="CheckBox" Id="GitBashDesktopIconCheckbox" Width="300" Height="17" X="34" Y="178" CheckBoxValue="1" Integer="yes" Property="GITBASHDESKTOPICON" Text="Create an icon on the Windows Desktop for Git Bash" />
        <Control Type="CheckBox" Id="GitGUIDesktopIconCheckbox" Width="300" Height="17" X="34" Y="195" CheckBoxValue="1" Integer="yes" Property="GITGUIDESKTOPICON" Text="Create an icon on the Windows Desktop for Git GUI" />
        <Control Type="PushButton" Id="Back" Width="56" Height="17" X="180" Y="243" Text="!(loc.WixUIBack)" />
        <Control Type="PushButton" Id="Next" Width="56" Height="17" X="236" Y="243" Default="yes" Text="!(loc.WixUINext)" />
        <Control Type="PushButton" Id="Cancel" Width="56" Height="17" X="304" Y="243" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
        <Control Type="Bitmap" Id="BannerBitmap" Width="370" Height="44" X="0" Y="0" TabSkip="no" Text="!(loc.GitShellOptionsDlgBannerBitmap)" />
        <Control Type="Line" Id="BannerLine" Width="370" Height="0" X="0" Y="44" />
        <Control Type="Line" Id="BottomLine" Width="370" Height="0" X="0" Y="234" />
        <Control Type="Text" Id="Description" Width="280" Height="20" X="25" Y="23" NoPrefix="yes" Text="Choose additional Windows Explorer integration options" Transparent="yes" />
        <Control Type="Text" Id="Title" Width="200" Height="15" X="15" Y="6" NoPrefix="yes" Text="{\WixUI_Font_Title}Choose Windows Integration Options" Transparent="yes" />
      </Dialog>
    </UI>
  </Fragment>
</Wix>
